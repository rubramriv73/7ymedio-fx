<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #20603D;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="giveCardLabel" alignment="CENTER" text="IS GIVING A CARD TO" textFill="#aba729">
         <font>
            <Font name="Noto Looped Thai Bold" size="27.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="223.0" prefWidth="585.0" spacing="50.0">
         <children>
            <VBox alignment="CENTER" prefHeight="223.0" prefWidth="155.0" spacing="10.0">
               <children>
                  <Label text="CARD:" textFill="#bcb84c">
                     <font>
                        <Font name="Noto Looped Thai Bold" size="20.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="cardVisor" editable="false" prefHeight="172.0" prefWidth="162.0" style="-fx-border-color: black; -fx-border-width: 4.5;" text="GOLDS">
                     <font>
                        <Font name="Noto Looped Thai Bold" size="24.0" />
                     </font></TextArea>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="120.0" prefWidth="128.0" spacing="10.0">
               <children>
                  <Label text="POINTS:" textFill="#bcb84c">
                     <font>
                        <Font name="Noto Looped Thai Bold" size="20.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="pointsVisor" editable="false" prefHeight="109.0" prefWidth="69.0" style="-fx-border-color: black; -fx-border-width: 4.5;" text="7.5">
                     <font>
                        <Font name="Noto Looped Thai Bold" size="34.0" />
                     </font></TextArea>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="73.0" prefWidth="585.0" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#giveNextCard" style="-fx-background-color: #7c1717;" text="NEXT CARD" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#stopRound" style="-fx-background-color: #7c1717;" text="STOP ROUND" textFill="WHITE" />
         </children>
         <effect>
            <DropShadow blurType="ONE_PASS_BOX" height="31.63" offsetX="1.5" offsetY="1.25" radius="14.934999999999999" width="30.11" />
         </effect>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
   </padding>
</VBox>
